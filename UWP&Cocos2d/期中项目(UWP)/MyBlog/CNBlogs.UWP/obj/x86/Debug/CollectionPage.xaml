<Page x:ConnectionId='1'
    x:Class="CNBlogs.UWP.CollectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CNBlogs.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:data="using:CNBlogs.UWP.Models">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel Grid.Row="0"
                       Background="{ThemeResource SystemControlHighlightAltListAccentLowBrush}"
                       Padding="0,9,0,9">
            <Button x:ConnectionId='10' Name="Home"
                    Content="&#xE700;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="24"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Background="Transparent"
                                      
                    >
            </Button>
            <TextBlock x:ConnectionId='11' Name="PageTitle"
                       Text="我的收藏"
                       RelativePanel.RightOf="Home"
                       RelativePanel.AlignVerticalCenterWithPanel="True"
                       FontSize="24"
                       FontFamily="微软雅黑"
                       Padding="20,0,0,0">
            </TextBlock>
            <TextBlock x:ConnectionId='12' Name="ListCount"
                       FontSize="14"
                       RelativePanel.RightOf="PageTitle"
                       RelativePanel.AlignTopWith="PageTitle"
                       Margin="10,0,0,0"
                       Text="">

            </TextBlock>
        </RelativePanel>
        <ListView x:ConnectionId='2' Name="CollectionListView"
                  Grid.Row="1"
                  Padding="10,10,10,10"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                                                          
                  >
            <ListView.ItemTemplate>
                <DataTemplate                               >
                    <Grid x:ConnectionId='4' Padding="5,5,5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                Padding="5,5,5,5"
                                VerticalAlignment="Center">
                            <Border BorderThickness="2" BorderBrush="{ThemeResource SystemControlHighlightAltListAccentLowBrush}">
                                <StackPanel>
                                    <TextBlock x:ConnectionId='9'                                 
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Padding="5,5,5,5"
                                           >

                                    </TextBlock>
                                    <Button Content="&#xE734;"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="25"
                                        IsEnabled="False"
                                        HorizontalAlignment="Center">

                                    </Button>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <Grid Grid.Column="1"
                          Padding="5,5,5,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock x:ConnectionId='5' Grid.Row="0"
                                                        
                                   FontSize="18"
                                   FontWeight="Bold">

                            </TextBlock>
                            <RelativePanel Grid.Row="1"                                  
                                       Padding="0,5,5,5">
                                <TextBlock x:ConnectionId='8'                        
                                       TextWrapping="Wrap"                                    
                                       FontSize="16"
                                       RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.AlignRightWithPanel="True">

                                </TextBlock>
                            </RelativePanel>
                            <StackPanel Orientation="Horizontal"
                                    Grid.Row="2">
                                <TextBlock x:ConnectionId='6'                               
                                       FontSize="14"
                                       Foreground="{ThemeResource SystemControlHighlightAltListAccentLowBrush}">

                                </TextBlock>
                                <TextBlock x:ConnectionId='7'                         
                                       FontSize="14"
                                       Margin="10,0,0,0">

                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ProgressRing x:ConnectionId='3' Name="Loading"
                      Width="100"
                      Height="100"
                      IsActive="True"
                      Grid.Row="1">
            
        </ProgressRing>
    </Grid>
</Page>

